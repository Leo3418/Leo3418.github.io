{%- capture img_path -%}
    {%- if page.draft -%}
        /assets/img/drafts/{{ page.slug }}
    {%- elsif page.collection == "posts" -%}
        /assets/img/posts{{ page.id }}
    {%- else -%}
        /assets/img{{ page.permalink }}
    {%- endif -%}
{%- endcapture -%}

{%- assign img_path_l10n = img_path | append: "/" | append: page.lang -%}
